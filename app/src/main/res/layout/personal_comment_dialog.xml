<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--<ScrollView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:id="@+id/scrollView3">-->

    <RelativeLayout
        android:layout_width="450dp"
        android:layout_height="325dp"
        android:background="@drawable/border_popup_rteditor"
        android:padding="20dp">

        <TextView
            android:id="@+id/student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="25dp"
            android:gravity="right"
            android:singleLine="true"
            android:text="Daiane dos Santos"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/gray_2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/student_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/student_name"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="25dp"
            android:gravity="right"
            android:singleLine="true"
            android:text="(51) 84658496"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gray_2" />

        <TextView
            android:id="@+id/lbl_personal_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/student_phone"
            android:layout_toEndOf="@+id/circle"
            android:layout_toRightOf="@+id/circle"
            android:singleLine="true"
            android:text="COMENTÁRIOS PESSOAIS SOBRE O ALUNO"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/gray_2"
            android:textSize="18dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/lbl_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lbl_personal_comment"
            android:layout_alignStart="@+id/lbl_personal_comment"
            android:layout_below="@+id/lbl_personal_comment"
            android:layout_marginBottom="15dp"
            android:text="(o aluno NÃO terá acesso a esse texto)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/gray_2" />

        <EditText
            android:id="@+id/edittext_personal_comment"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lbl_privacy"
            android:background="@drawable/border_popup_personal_comment"
            android:gravity="left|top"
            android:padding="15dp"
            android:scrollHorizontally="true"
            android:scrollbars="vertical" />

        <RelativeLayout
            android:id="@+id/circle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_above="@+id/lbl_privacy"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/lbl_personal_comment"
            android:layout_marginRight="10dp"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/circle"></RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <!--</ScrollView>-->

</RelativeLayout>