<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_background"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_centerInParent="true"
        android:background="@drawable/md_transparent"
        android:minHeight="170dp"
        android:minWidth="150dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/item_color_background"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignBottom="@+id/item_background"
        android:layout_alignLeft="@+id/item_background"
        android:layout_alignStart="@+id/item_background"
        android:background="@color/gray_3"
        android:gravity="bottom|right"
        android:minHeight="120dp"
        android:minWidth="120dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:singleLine="false"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/item_background"
        android:layout_alignEnd="@+id/item_background"
        android:layout_alignLeft="@+id/item_background"
        android:layout_alignRight="@+id/item_background"
        android:layout_alignStart="@+id/item_background"
        android:layout_below="@+id/item_class_notification_icon"
        android:orientation="vertical"
        android:id="@+id/linearLayout3">

        <TextView
            android:id="@+id/adapter_item_class_txv_code"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/item_color_background"
            android:layout_alignBottom="@+id/item_color_background"
            android:layout_toLeftOf="@+id/item_class_notification_icon"
            android:layout_toStartOf="@+id/item_class_notification_icon"
            android:layout_weight="1"
            android:gravity="bottom|left"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:text="TURMA 1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:textStyle="normal|bold"
            android:paddingRight="15dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_class_notification_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:autoText="false"
        android:background="@drawable/ic_done"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/linearLayout3"
        android:layout_alignEnd="@+id/linearLayout3"
        android:layout_marginTop="24dp" />

</RelativeLayout>