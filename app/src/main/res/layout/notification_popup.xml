<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:background="@drawable/border_popup_rteditor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/popup_notification"
            android:id="@+id/textView15"
            android:layout_alignParentTop="true"
            android:textColor="@color/gray_2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:padding="20dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:id="@+id/notification_interval">

            <RadioButton
                android:text="1 hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/interval1"
                android:layout_weight="1"
                android:textColor="@color/gray_1"
                app:buttonTint="@color/gray_1" />

            <RadioButton
                android:text="6 horas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/interval6"
                android:layout_weight="1"
                android:textColor="@color/gray_1"
                app:buttonTint="@color/gray_1" />

            <RadioButton
                android:text="24 horas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/interval24"
                android:layout_weight="1"
                android:textColor="@color/gray_1"
                app:buttonTint="@color/gray_1" />

            <RadioButton
                android:text="48 horas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/interval48"
                android:layout_weight="1"
                android:textColor="@color/gray_1"
                app:buttonTint="@color/gray_1" />

        </RadioGroup>

        <Button
            android:id="@+id/btn_notification_ok"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_login"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="20dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="OK" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/gray_1" />

            <Button
                android:id="@+id/btn_notification_cancel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_not_agree_border"
                android:text="cancelar"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="20dp"
                style="@style/Widget.AppCompat.Button.Borderless" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>