<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/big_drawer"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:animateLayoutChanges="true"
    android:background="@color/gray_1"
    android:orientation="vertical"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_logo_green" />

        <ImageView
            android:id="@+id/online_status"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_alignBottom="@+id/img_logo"
            android:layout_weight="1"
            android:visibility="invisible"
            app:srcCompat="@android:drawable/presence_busy" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/portfolios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|left">

        <ImageButton
            android:id="@+id/btn_members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_people" />

        <TextView
            android:id="@+id/tx_members"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_members"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/btn_members"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/btn_members"
            android:gravity="center|left"
            android:text="@string/drawer_portfolio"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gray_3" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|left">

        <ImageButton
            android:id="@+id/btn_activities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_paper" />

        <TextView
            android:id="@+id/tx_activities"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_activities"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/btn_activities"
            android:layout_marginLeft="50dp"
            android:layout_toEndOf="@+id/btn_activities"
            android:layout_toRightOf="@+id/btn_activities"
            android:gravity="center|left"
            android:text="@string/drawer_activities"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gray_3" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/attachments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|left">

        <ImageButton
            android:id="@+id/btn_attachments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_paperclip" />

        <TextView
            android:id="@+id/tx_attachments"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_attachments"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/btn_attachments"
            android:layout_marginLeft="50dp"
            android:layout_toEndOf="@+id/btn_attachments"
            android:layout_toRightOf="@+id/btn_attachments"
            android:gravity="center|left"
            android:text="@string/drawer_files"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gray_3" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/references"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|left">

        <ImageButton
            android:id="@+id/btn_references"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_notebook" />

        <TextView
            android:id="@+id/tx_references"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_references"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/btn_references"
            android:layout_marginLeft="50dp"
            android:layout_toEndOf="@+id/btn_references"
            android:layout_toRightOf="@+id/btn_references"
            android:gravity="center|left"
            android:text="@string/drawer_references"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gray_3" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/reports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|left">

        <ImageButton
            android:id="@+id/btn_reports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_document" />

        <TextView
            android:id="@+id/tx_reports"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_reports"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/btn_reports"
            android:layout_marginLeft="50dp"
            android:layout_toEndOf="@+id/btn_reports"
            android:layout_toRightOf="@+id/btn_reports"
            android:gravity="center|left"
            android:text="@string/drawer_reports"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gray_3" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|left">

        <ImageButton
            android:id="@+id/btn_config"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_gears" />

        <TextView
            android:id="@+id/tx_config"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_config"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/btn_config"
            android:layout_marginLeft="50dp"
            android:layout_toEndOf="@+id/btn_config"
            android:layout_toRightOf="@+id/btn_config"
            android:gravity="center|left"
            android:text="@string/drawer_settings"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gray_3" />
    </RelativeLayout>

</LinearLayout>
