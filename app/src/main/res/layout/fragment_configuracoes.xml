<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ufcspa.unasus.appportfolio.Activities.Fragments.FragmentConfiguracoes">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_user"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/default_profile_picture" />

            <ImageView
                android:id="@+id/btn_change_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignBottom="@+id/img_user"
                android:layout_gravity="center_horizontal"
                android:layout_toEndOf="@+id/btn_alterar"
                android:layout_toRightOf="@+id/btn_alterar"
                android:src="@drawable/attachment_plus" />

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/edt_nome"
                android:layout_alignStart="@+id/edt_nome"
                android:layout_below="@+id/edt_nome"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/edt_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/btn_alterar"
                android:layout_alignStart="@+id/btn_alterar"
                android:layout_below="@+id/btn_change_image"
                android:layout_marginTop="25dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edt_telefone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/edt_email"
                android:layout_alignStart="@+id/edt_email"
                android:layout_below="@+id/edt_email"
                android:ems="10"
                android:inputType="phone" />

            <EditText
                android:id="@+id/edt_senha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/edt_confirma_senha"
                android:layout_alignStart="@+id/edt_confirma_senha"
                android:layout_below="@+id/edt_telefone"
                android:ems="10"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/edt_confirma_senha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/edt_telefone"
                android:layout_alignStart="@+id/edt_telefone"
                android:layout_below="@+id/edt_senha"
                android:ems="10"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/lbl_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/edt_nome"
                android:layout_alignTop="@+id/edt_nome"
                android:layout_toLeftOf="@+id/img_user"
                android:layout_toStartOf="@+id/img_user"
                android:gravity="center"
                android:lines="1"
                android:text="Nome:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/lbl_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/edt_email"
                android:layout_alignEnd="@+id/lbl_nome"
                android:layout_alignRight="@+id/lbl_nome"
                android:layout_alignTop="@+id/edt_email"
                android:gravity="center"
                android:lines="1"
                android:text="E-mail:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/lbl_telefone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/edt_telefone"
                android:layout_alignEnd="@+id/lbl_email"
                android:layout_alignRight="@+id/lbl_email"
                android:layout_alignTop="@+id/edt_telefone"
                android:gravity="center"
                android:lines="1"
                android:text="Telefone:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/lbl_senha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/edt_confirma_senha"
                android:layout_alignEnd="@+id/lbl_telefone"
                android:layout_alignRight="@+id/lbl_telefone"
                android:layout_alignTop="@+id/edt_senha"
                android:gravity="center"
                android:lines="1"
                android:text="Senha:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/lbl_confirma_senha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/edt_confirma_senha"
                android:layout_alignEnd="@+id/lbl_senha"
                android:layout_alignRight="@+id/lbl_senha"
                android:layout_below="@+id/lbl_senha"
                android:gravity="center"
                android:text="Confirma Senha:"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/btn_alterar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/edt_confirma_senha"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:background="#00ffffff"
                android:text="Alterar" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
