<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_7">

    <TextView
        android:text="ReferÃªncias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textSize="30sp"
        android:textColor="@color/gray_1"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="50dp"
        android:paddingTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView16">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView16"
            android:layout_above="@+id/linearLayout10"
            android:layout_weight="1">

            <ListView
                android:id="@+id/frag_ref_listview"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/white"
                android:layout_height="match_parent"
                android:divider="#00000000"
                android:paddingLeft="50dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/gray_7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="150dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="40dp"
            android:background="@color/gray_8"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/frag_ref_edt"
                android:layout_width="match_parent"
                android:autoLink="web"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textMultiLine"
                android:hint="@string/reference_hint"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:layout_gravity="center_vertical"
                android:layout_margin="15dp"
                android:fontFamily="sans-serif"
                android:textColorHint="@color/gray_3"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/frag_ref_btSave"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bt_send_ref"
                android:layout_marginRight="30dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>