<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mini_drawer"
    android:layout_width="80dp"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:animateLayoutChanges="true"
    android:background="@color/gray_1"
    android:orientation="vertical"
    android:visibility="visible">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:src="@drawable/icon" />

    <ImageButton
        android:id="@+id/btn_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/drawer_integrantes" />

    <ImageButton
        android:id="@+id/btn_activities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/drawer_relatorios" />

    <ImageButton
        android:id="@+id/btn_attachments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/drawer_anexos" />

    <ImageButton
        android:id="@+id/btn_references"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/drawer_atividades" />

    <ImageButton
        android:id="@+id/btn_reports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/drawer_referencias" />

    <ImageButton
        android:id="@+id/btn_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/drawer_congiguracoes" />

</LinearLayout>
