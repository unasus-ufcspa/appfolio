<android.support.v4.widget.SlidingPaneLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/tools"
    android:id="@+id/rteditor_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    sothree:umanoOverlay="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include android:id="@+id/rte_toolbar_container" layout="@layout/rte_toolbar" />

        <ScrollView
            android:id="@+id/rte_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/rte_toolbar_container"
            android:layout_below="@+id/fullscreen"
            android:fillViewport="true"
            android:scrollbarStyle="insideOverlay">
            <RelativeLayout
                android:id="@+id/comments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.onegravity.rteditor.RTEditText
                    android:id="@+id/rtEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="35dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:gravity="top"
                    android:imeOptions="actionDone|flagNoEnterAction"
                    android:inputType="textMultiLine|textAutoCorrect|textCapSentences" />

            </RelativeLayout>
        </ScrollView>

        <ImageButton
            android:id="@+id/fullscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/info_rteditor_container"
            android:background="@drawable/fullscreen_text" />

        <LinearLayout
            android:id="@+id/info_rteditor_container"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/gray_1"
            android:orientation="horizontal">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/activity_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="Atividade 1: imunologia"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:visibility="visible" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/student_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="35dp"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="Anitta Maltatti"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/usr_photo_left"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="-35dp"
            android:background="@drawable/rounded_corner"
            android:src="@drawable/ex_user_img"
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#00000000"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_toEndOf="@+id/topbar_gray"
            android:layout_toRightOf="@+id/topbar_gray"
            android:background="@android:color/transparent"
            android:gravity="bottom"
            android:orientation="horizontal">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/btn_geral"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:adjustViewBounds="false"
                android:background="@drawable/geral_comment_tab"
                android:gravity="center"
                android:scaleType="fitEnd"
                android:text="Geral"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:visibility="visible" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/btn_specific"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:adjustViewBounds="false"
                android:background="@drawable/specific_comment_tab"
                android:gravity="center"
                android:scaleType="fitEnd"
                android:text="Observações"
                android:textColor="@color/base_green"
                android:textStyle="bold" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/comments_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/button_container"
            android:layout_toEndOf="@+id/topbar_gray"
            android:layout_toRightOf="@+id/topbar_gray"
            android:visibility="visible">

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/topbar_gray"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_above="@+id/comments_container"
            android:background="@color/gray_1">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/leftbar_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/comments_container"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/button_container"
            android:layout_toStartOf="@+id/button_container"
            android:background="@android:color/transparent">

            <RelativeLayout
                android:id="@+id/rightbar_green"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@color/base_green"></RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/usr_photo_right"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-35dp"
            android:background="@drawable/rounded_corner"
            android:src="@drawable/ex_user_img"
            android:visibility="visible" />

    </RelativeLayout>

</android.support.v4.widget.SlidingPaneLayout>