<android.support.v4.widget.SlidingPaneLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rteditor_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include android:id="@+id/rte_toolbar_container" layout="@layout/rte_toolbar" />

        <ScrollView
            android:id="@+id/rte_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/rte_toolbar_container"
            android:fillViewport="true"
            android:scrollbarStyle="insideOverlay"
            android:layout_below="@+id/fullscreen">
            <RelativeLayout
                android:id="@+id/comments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.onegravity.rteditor.RTEditText
                    android:id="@+id/rtEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:gravity="top"
                    android:hint="Boa Atividade!"
                    android:imeOptions="actionDone|flagNoEnterAction"
                    android:inputType="textMultiLine|textAutoCorrect|textCapSentences"
                    android:layout_marginLeft="35dp"
                    android:textIsSelectable="false" />

            </RelativeLayout>
        </ScrollView>

        <ImageButton
            android:id="@+id/fullscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fullscreen_text"
            android:layout_below="@+id/info_rteditor_container"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/gray_2"
            android:id="@+id/info_rteditor_container"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <me.grantland.widget.AutofitTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Atividade 1: imunologia"
                android:id="@+id/textView10"
                android:textColor="@color/white"
                android:gravity="bottom"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="visible"
                android:singleLine="true"
                android:paddingBottom="2dp" />

            <me.grantland.widget.AutofitTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Daiane dos Santos"
                android:id="@+id/textView11"
                android:textColor="@color/white"
                android:gravity="bottom|right"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:singleLine="true"
                android:paddingBottom="2dp" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:visibility="visible"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:id="@+id/button_container"
            android:gravity="bottom">

            <me.grantland.widget.AutofitTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_geral"
                android:layout_weight="1"
                android:background="@drawable/geral_comment_tab"
                android:adjustViewBounds="false"
                android:visibility="visible"
                android:scaleType="fitEnd"
                android:gravity="center"
                android:text="Geral"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <me.grantland.widget.AutofitTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_specific"
                android:layout_weight="1"
                android:background="@drawable/specific_comment_tab"
                android:adjustViewBounds="false"
                android:scaleType="fitEnd"
                android:gravity="center"
                android:text="Observações"
                android:textColor="@color/base_green"
                android:textStyle="bold" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/button_container"
            android:layout_centerHorizontal="true"
            android:id="@+id/comments_container"></FrameLayout>

    </RelativeLayout>

</android.support.v4.widget.SlidingPaneLayout>