<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_background"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_centerInParent="true"
        android:background="@drawable/md_transparent"
        android:minHeight="170dp"
        android:minWidth="150dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/item_color_background"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignBottom="@+id/item_background"
        android:layout_alignLeft="@+id/item_background"
        android:layout_alignStart="@+id/item_background"
        android:background="#666666"
        android:gravity="bottom|right"
        android:minHeight="150dp"
        android:minWidth="150dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:singleLine="false"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageButton
        android:id="@+id/btn_info"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/item_background"
        android:layout_alignRight="@+id/item_background"
        android:layout_alignTop="@+id/item_color_background"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_open" />

    <TextView
        android:id="@+id/adapter_item_class_txv_ds_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_background"
        android:layout_alignEnd="@+id/item_color_background"
        android:layout_alignLeft="@+id/item_color_background"
        android:layout_alignRight="@+id/item_color_background"
        android:layout_alignStart="@+id/item_color_background"
        android:layout_below="@+id/btn_info"
        android:gravity="bottom|right"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:text="TURMA 1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/item_background"
        android:layout_alignEnd="@+id/item_background"
        android:layout_alignLeft="@+id/item_class_notification_icon"
        android:layout_alignRight="@+id/item_background"
        android:layout_alignStart="@+id/item_class_notification_icon"
        android:layout_alignTop="@+id/item_color_background"
        android:visibility="gone">

        <TextView
            android:id="@+id/btn_info_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/gray_3"
            android:gravity="bottom|right"
            android:minHeight="150dp"
            android:minWidth="150dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:singleLine="false"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/btn_info_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_open_white" />

        <TextView
            android:id="@+id/txt_class_code_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_send_message"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:gravity="right"
            android:paddingRight="15dp"
            android:text="TURMA 1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_finalize_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_info_view"
            android:layout_alignEnd="@+id/btn_info_view"
            android:layout_alignLeft="@+id/btn_info_view"
            android:layout_alignRight="@+id/btn_info_view"
            android:layout_alignStart="@+id/btn_info_view"
            android:padding="3dp"
            android:text="finalizar atividades da turma"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gray_1"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_finalize_activity"
            android:layout_alignEnd="@+id/btn_info_view"
            android:layout_alignLeft="@+id/btn_info_view"
            android:layout_alignRight="@+id/btn_info_view"
            android:layout_alignStart="@+id/btn_info_view"
            android:background="#dadada"
            android:padding="3dp"
            android:text="enviar mensagem para a turma"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gray_1"
            android:textSize="12dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_class_notification_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/item_background"
        android:layout_alignStart="@+id/item_background"
        android:layout_alignTop="@+id/item_background"
        android:layout_marginLeft="15dp"
        android:autoText="false"
        android:background="@drawable/rounded_corner"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:textSize="20dp" />

</RelativeLayout><!--<?xml version="1.0" encoding="utf-8"?>--><!--<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"--><!--android:layout_width="match_parent"--><!--android:layout_height="match_parent"--><!--android:orientation="vertical">-->

